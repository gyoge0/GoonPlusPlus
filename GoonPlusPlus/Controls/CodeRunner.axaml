<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:GoonPlusPlus.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="GoonPlusPlus.Controls.CodeRunner">

    <TabControl TabStripPlacement="Bottom" Margin="0, 0, 0, 7">
        <TabItem Header="Compile" Name="Compile" VerticalAlignment="Stretch">
            
            <TextBox 
                FontFamily="Consolas" 
                Text="{Binding CompileOutput}" 
                IsReadOnly="true" 
                CaretBrush="Transparent" 
                Background="Transparent">
                
                <TextBox.DataContext>
                    <vm:CompileViewModel></vm:CompileViewModel>
                </TextBox.DataContext>
            </TextBox>
            
        </TabItem>
    </TabControl>
</UserControl>